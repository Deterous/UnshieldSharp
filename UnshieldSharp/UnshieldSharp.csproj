<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net48;netcoreapp3.1;net5.0</TargetFrameworks>
    <PlatformTarget>x86</PlatformTarget>
    <Title>UnshieldSharp</Title>
    <AssemblyName>UnshieldSharp</AssemblyName>
    <Description>Port of Unshield to C#</Description>
    <Authors>Matt Nadareski;David Eriksson</Authors>
    <Product>UnshieldSharp</Product>
    <Copyright>Copyright (c) 2003 David Eriksson, Copyright (c)2018-2021 Matt Nadareski</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <RepositoryUrl>https://github.com/mnadareski/UnshieldSharp</RepositoryUrl>
    <Version>1.5.0</Version>
    <AssemblyVersion>1.5.0</AssemblyVersion>
    <FileVersion>1.5.0</FileVersion>
    <IncludeSource>true</IncludeSource>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="zlib.net-mutliplatform" Version="1.0.4" />
  </ItemGroup>

</Project>